{
  // Extends https://github.com/tsconfig/bases/blob/main/bases/node16.json
  "extends": "@tsconfig/node16/tsconfig.json",
  //"files": ["./global.d.ts"],
  "baseUrl": "src",
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["src"]
}
